<Window x:Class="lab11Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab11Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="300">
    <Grid>
        <Path Fill="Red" Stroke="Black">
            <Path.Data>
                <GeometryGroup >
                    <EllipseGeometry RadiusX="100" RadiusY="100" Center="150,180"/>
                    <EllipseGeometry RadiusX="80" RadiusY="80" Center="150,180"/>
                    <RectangleGeometry Rect="71,170,158,20" RadiusX="3" RadiusY="3">
                        <RectangleGeometry.Transform>
                            <RotateTransform Angle="-45" CenterX="150" CenterY="180"/>
                        </RectangleGeometry.Transform>
                    </RectangleGeometry>
                </GeometryGroup>
            </Path.Data>
        </Path>
    </Grid>
</Window>
